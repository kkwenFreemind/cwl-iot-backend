<?xml version="1.0" encoding="UTF-8"?>
<!-- Log levels from low to high: TRACE < DEBUG < INFO < WARN < ERROR < FATAL. If set to WARN, information below WARN level will not be output -->
<configuration>

    <!-- Spring Boot default logback configuration -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <springProperty scope="context" name="APP_NAME" source="spring.application.name"/>
    <property name="LOG_HOME" value="/logs/${APP_NAME}"/>

    <!-- 1. Console output -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <!-- <withJansi>true</withJansi>-->
        <!-- This log appender is for development use, only configure the lowest level, console output log level is greater than or equal to this level -->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>
        <encoder>
            <Pattern>${CONSOLE_LOG_PATTERN}</Pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 2. File output -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- Current log file complete path -->
        <file>${LOG_HOME}/log.log</file>
        <encoder>
            <!-- Log file output format -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} -%5level ---[%15.15thread] %-40.40logger{39} : %msg%n%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <!-- Log recorder rolling policy, record by size and time -->
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- Rolled log file naming pattern -->
            <fileNamePattern>${LOG_HOME}/%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <!-- Maximum size of single log file -->
            <maxFileSize>10MB</maxFileSize>
            <!-- Keep logs for maximum 30 days -->
            <maxHistory>30</maxHistory>
            <!-- Total log files size not exceeding 1GB -->
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <!-- Threshold filter, output logs above INFO level -->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
    </appender>

    <!-- Development environment output to console -->
    <springProfile name="dev">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

    <!-- Production environment output to file -->
    <springProfile name="prod">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE"/>
        </root>
    </springProfile>
</configuration>
